<h1>Tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <% checked = task.completed ? 'checked' : '' %>
  <li>
    <input type="checkbox" <%= checked %> disabled="true">
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task),
      data: {
        turbo_method: :delete,
        turbo_confirm: 'Are you sure?'
      }
    %>
  </li>
<% end %>
</ul>
<%= link_to '+ Add new task', new_task_path %>
